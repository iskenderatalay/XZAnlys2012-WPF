<Page x:Class="XZAnlys2012.Labil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XZAnlys2012"
      mc:Ignorable="d"
      Title="XZAnlys2012" FontFamily="Century Gothic" Height="130" Width="400" Background="{x:Null}" Loaded="Page_Loaded">
    <Grid>
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Sistem Labil !!" TextAlignment="Center" Foreground="#FF7F1710" FontSize="30"/>

            <Grid Margin="0,20,0,0">
                <DockPanel Width="210" HorizontalAlignment="Center">
                    <Button x:Name="bastan" Content="Baştan Başla" Width="120" IsTabStop="True" Style="{DynamicResource altbutonlar}" Click="Bastan_Click"/>
                    <Button x:Name="kapat" Content="Kapat" Width="80" Margin="10,0,0,0" IsTabStop="True" Style="{DynamicResource altbutonlar}" Click="Kapat_Click"/>
                </DockPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
